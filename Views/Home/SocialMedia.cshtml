@model IEnumerable<DigitalRegistry.Models.Social_Media>


<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <br>

    <h1 align="center">Social Media US Digital Registry</h1>

    <br>
    <div class="container">
        <div class="topnav" id="myTopnav">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a class="active" asp-controller="Home" asp-action="SocialMedia">Social Media</a>
            
                <a asp-controller="Home" asp-action="AboutUs">About Project</a>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                </a>
        </div>
    </div>
